<Page x:Class="ContractClaim.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Status Page">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Claim Status Tracking" FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="All Claims Overview" FontSize="18" FontWeight="SemiBold" 
                          Margin="0,0,0,15"/>

                <ListView x:Name="lstStatus" Height="350" Background="White" BorderThickness="1" BorderBrush="#DDD">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                            <GridViewColumn Header="Lecturer" DisplayMemberBinding="{Binding Name}" Width="120"/>
                            <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="100"/>
                            <GridViewColumn Header="Status" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusColor}" CornerRadius="8" 
                                                Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Status}" Foreground="White" 
                                                      FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Progress" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ProgressBar Value="{Binding Progress}" Height="15" 
                                                    Minimum="0" Maximum="100"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Content="🔄 Refresh Status" x:Name="btnRefresh" Click="btnRefresh_Click" 
                        Background="#3498DB" Foreground="White" FontWeight="SemiBold" 
                        Padding="15,8" BorderThickness="0" Cursor="Hand" 
                        HorizontalAlignment="Left" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>