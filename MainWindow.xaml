<Window x:Class="ContractClaim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Claims Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F0F8FF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Contract Claim" Foreground="White" FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Button x:Name="btnLecturers" Content="Submit Claim" Background="#3498DB" Foreground="White" 
                        FontSize="16" FontWeight="SemiBold" Height="45" Margin="10,5" BorderThickness="0" 
                        Cursor="Hand" Click="NavButton_Click"/>

                <Button x:Name="btnApprovals" Content="Approve Claims" Background="#E74C3C" Foreground="White" 
                        FontSize="16" FontWeight="SemiBold" Height="45" Margin="10,5" BorderThickness="0" 
                        Cursor="Hand" Click="NavButton_Click"/>

                <Button x:Name="btnStatus" Content="View Status" Background="#27AE60" Foreground="White" 
                        FontSize="16" FontWeight="SemiBold" Height="45" Margin="10,5" BorderThickness="0" 
                        Cursor="Hand" Click="NavButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="White" Margin="15" CornerRadius="10">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>