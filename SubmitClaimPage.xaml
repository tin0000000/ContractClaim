<Page x:Class="ContractClaim.SubmitClaimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Submit Claim">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Submit New Claim" FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="10" Padding="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Claim Details -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Claim Details" FontSize="18" FontWeight="SemiBold" 
                              Foreground="#2C3E50" Margin="0,0,0,15"/>

                    <TextBlock Text="Lecturer Name" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtName" Padding="10" FontSize="14" Background="White" 
                            BorderThickness="1" BorderBrush="#DDD" Height="35"/>

                    <TextBlock Text="Hours Worked" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtHours" Padding="10" FontSize="14" Background="White" 
                            BorderThickness="1" BorderBrush="#DDD" Height="35" Text="0"/>

                    <TextBlock Text="Hourly Rate ($)" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtRate" Padding="10" FontSize="14" Background="White" 
                            BorderThickness="1" BorderBrush="#DDD" Height="35" Text="0"/>

                    <TextBlock x:Name="txtTotal" Text="Total Amount: $0.00" FontWeight="Bold" 
                              FontSize="16" Margin="0,15,0,5" Foreground="#27AE60"/>

                    <TextBlock Text="Additional Notes" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtNotes" Padding="10" FontSize="14" Background="White" 
                            BorderThickness="1" BorderBrush="#DDD" Height="80" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Right Column - File Upload -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Supporting Documents" FontSize="18" FontWeight="SemiBold" 
                              Foreground="#2C3E50" Margin="0,0,0,15"/>

                    <Border BorderBrush="#DDD" BorderThickness="2" Background="White" 
                            CornerRadius="8" Padding="20" Margin="0,0,0,15" Height="150">
                        <StackPanel VerticalAlignment="Center">
                            <Button Content="📎 Choose File" x:Name="btnChooseFile" 
                                    Background="#3498DB" Foreground="White" Padding="15,8" 
                                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                    Click="btnChooseFile_Click"/>
                            <TextBlock x:Name="txtFileName" Text="No file chosen" FontSize="12" 
                                      Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="Supported: PDF, DOCX, XLSX (Max: 5MB)" FontSize="10" 
                                      Foreground="DarkGray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Button Content="🚀 SUBMIT CLAIM" x:Name="btnSubmit" 
                            Background="#27AE60" Foreground="White" FontSize="16" FontWeight="Bold" 
                            Padding="20,12" BorderThickness="0" Cursor="Hand" 
                            Click="btnSubmit_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>